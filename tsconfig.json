{
    "compilerOptions": {
        "target": "es2017",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "removeComments": true,
        "diagnostics": true,
    },
    "include": [
        "src"
    ],
}